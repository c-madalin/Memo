<Window x:Class="MemoGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoGame"
        mc:Ignorable="d"
           WindowStyle="None" 
   AllowsTransparency="True"
        Title="Memo" Height="650" Width="1000">
    <Border Background="#FF202020" CornerRadius="8" BorderThickness="0.5" BorderBrush="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:TitleBar x:Name="TitleBar" Grid.Row="0" />


            <Frame Grid.Row="2" x:Name="Main" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Window>
