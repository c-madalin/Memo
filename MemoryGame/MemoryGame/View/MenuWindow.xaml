<Window x:Class="MemoryGame.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        xmlns:vm="clr-namespace:MemoryGame.ViewModel"
        mc:Ignorable="d"
        Title="memo" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#3A3A3A"
        AllowsTransparency="True"
        WindowStyle="None">
    <Window.Resources>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#707070"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!-- This is the important part that fixes dropdown items -->
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="#4A4A4A"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="5">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#707070"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#606060"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </Style.Resources>

        </Style>

        <!-- Style for Label -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="300"/>
        </Style>

    </Window.Resources>

    <Window.DataContext>
        <vm:MenuWindowViewModel/>
    </Window.DataContext>

    <Border Background="#3a3a3a" CornerRadius="8" BorderThickness="0.5" BorderBrush="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <local:TitleBar x:Name="TitleBar" Grid.Row="0" />

            <!-- Main Content Grid with Two Columns -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Settings Panel -->
                <StackPanel Grid.Column="0"
                    Background="#3A3A3A" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

                    <TextBlock 
                        Text="Game Settings" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,30"/>

                    <!-- Category Selection -->
                    <Label 
                        Content="Category:" 
                        Style="{StaticResource LabelStyle}" 
                        Margin="10,10,10,0"/>
                    <ComboBox 
                        Style="{StaticResource ComboBoxStyle}"
                        SelectedIndex="0"
                        ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}">
                    </ComboBox>

                    <!-- Grid Size Selection -->
                    <Label 
                        Content="Rows:" 
                        Style="{StaticResource LabelStyle}" 
                        Margin="10,20,10,0"/>
                    <ComboBox 
                        Style="{StaticResource ComboBoxStyle}"
                        SelectedIndex="2"
                        ItemsSource="{Binding GridSizes}" 
                        SelectedItem="{Binding SelectedRows}">
                    </ComboBox>

                    <Label 
                        Content="Columns:" 
                        Style="{StaticResource LabelStyle}" 
                        Margin="10,20,10,0"/>
                    <ComboBox 
                        Style="{StaticResource ComboBoxStyle}"
                        SelectedIndex="2"
                        ItemsSource="{Binding GridSizes}" 
                        SelectedItem="{Binding SelectedColumns}">
                    </ComboBox>

                    <!-- Game Time Selection -->
                    <Label 
                        Content="Game Time (seconds):" 
                        Style="{StaticResource LabelStyle}" 
                        Margin="10,20,10,0"/>
                    <ComboBox 
                        Style="{StaticResource ComboBoxStyle}"
                        SelectedIndex="1"
                        ItemsSource="{Binding TimeOptions}" 
                        SelectedItem="{Binding GameTime}">
                    </ComboBox>
                </StackPanel>

                <!-- Right Column - Action Buttons -->
                <StackPanel Grid.Column="1"
                    Background="#3A3A3A" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

                    <TextBlock 
                        Text="Actions" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,30"/>

                    <Button 
                        Content="New Game" 
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding NewGameCommand}"
                        Margin="10,10,10,10"/>

                    <Button 
                        Content="Open Game" 
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding OpenGameCommand}"/>

                    <Button 
                        Content="Statistics" 
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding StatisticsCommand}"/>

                    <Button 
                        Content="About" 
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding AboutCommand}"/>
                </StackPanel>
            </Grid>

            <!-- Logout Button in the Bottom Row -->
            <StackPanel Grid.Row="2"
                Background="#3A3A3A" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0,10,0,30">

                <Button 
                    Content="Logout" 
                    Style="{StaticResource MenuButtonStyle}"
                    Command="{Binding LogoutCommand}"
                    Margin="10,10,10,10"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>